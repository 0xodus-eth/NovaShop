# Environment Configuration Template
# Copy this file to .env and update the values

# Application Settings
NODE_ENV=development
PORT=3001

# Database Configuration
MONGODB_URI=mongodb://order_user:order_pass@localhost:27017/orderdb

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Kafka Configuration
KAFKA_BROKER=localhost:9092
KAFKA_CLIENT_ID=order-service
KAFKA_GROUP_ID=order-service-group

# Kafka Topics
KAFKA_TOPIC_ORDER_CREATED=order.created
KAFKA_TOPIC_ORDER_UPDATED=order.updated
KAFKA_TOPIC_PAYMENT_PROCESSED=payment.processed

# External Services
PRODUCT_SERVICE_URL=http://localhost:3000
PAYMENT_SERVICE_URL=http://localhost:3002

# Logging
LOG_LEVEL=debug

# CORS Configuration
CORS_ORIGIN=http://localhost:3003

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Order Configuration
ORDER_TIMEOUT_MINUTES=30
MAX_ITEMS_PER_ORDER=50

# Notifications (if needed)
# EMAIL_SERVICE_URL=http://localhost:3004
# SMS_SERVICE_URL=http://localhost:3005
